<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <corners
                android:radius="@dimen/margin_4"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="@color/cartBtnGradStart"
                android:endColor="@color/cartBtnGradEnd"
                android:type="linear" />
            <corners
                android:radius="@dimen/margin_4"/>
        </shape>
    </item>
</selector>