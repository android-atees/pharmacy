                        <!--android:layout_below="@+id/txt5"-->
                        <!--android:layout_alignEnd="@+id/txt6"-->
                        <!--android:layout_alignRight="@+id/txt6"/>-->

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>