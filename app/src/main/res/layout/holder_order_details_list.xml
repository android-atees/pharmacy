                        <!--android:id="@+id/txt7"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_below="@+id/txt6"-->
                        <!--android:text="deliver fee "/>-->

                    <!--<TextView-->
                        <!--android:id="@+id/txt8"-->
