<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/firstmainLay"
    tools:context=".view.activity.UploadPresActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white">

    </androidx.appcompat.widget.Toolbar>

    <include
        layout="@layout/toolbar_relief_img"/>

    <RelativeLayout
        android:id="@+id/lay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/toolbar"
        android:padding="@dimen/margin_8">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_pin"
            android:tint="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:text="Pincode"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pinCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="90dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardChangePin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="@dimen/margin_2"
            app:cardElevation="@dimen/margin_2"
            android:layout_alignParentEnd="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8"
                android:paddingTop="@dimen/margin_4"
                android:paddingBottom="@dimen/margin_4"
                android:textColor="@color/colorPrimary"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay"
        android:fillViewport="true"
        android:padding="@dimen/margin_16"
        android:background="@color/white"
        tools:context=".view.activity.UploadPresActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".view.activity.UploadPresActivity">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/uploadImageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/uploadImage"
                    android:layout_width="174dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/im_placeholder"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/uploadImage2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/uploadImage2"
                    android:layout_width="174dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/im_placeholder"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/uploadImage"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/upload_image_close"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/upload_pres_close_bg"
                    app:layout_constraintEnd_toEndOf="@id/uploadImage"
                    app:layout_constraintTop_toTopOf="@id/uploadImage"
                    app:srcCompat="@drawable/ic_close" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/upload_image_2_close"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/upload_pres_close_bg"
                    app:layout_constraintEnd_toEndOf="@id/uploadImage2"
                    app:layout_constraintTop_toTopOf="@id/uploadImage2"
                    app:srcCompat="@drawable/ic_close" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txt2"
                android:layout_below="@+id/uploadImageLayout"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content"
                android:text="YOUR PRESCRIPTION"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/gradStart"
                android:layout_marginTop="@dimen/margin_20"
                android:padding="@dimen/margin_6"/>

            <LinearLayout
                android:layout_below="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_8"
                android:layout_margin="@dimen/margin_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expected Delivery Date"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/upload_pres_bg"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_4"
                    android:padding="@dimen/margin_8">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/calendar"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="@android:color/black"
                        android:padding="@dimen/margin_6"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/et_textfield"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="@dimen/margin_4"
                    android:gravity="start"
                    android:padding="@dimen/margin_8"
                    android:background="@drawable/upload_pres_bg"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="Remarks If Any"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/et_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/margin_4"
                    android:padding="@dimen/margin_8"
                    android:background="@drawable/upload_pres_bg"/>

                <!--<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <in.ateesinfomedia.relief.recorder.RecordView
                        android:id="@+id/recordView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:background="@color/white"
                        android:layout_alignParentBottom="true"
                        android:layout_toStartOf="@id/recordBtn"
                        app:slide_to_cancel_arrow="@drawable/ic_keyboard_arrow_left"
                        app:slide_to_cancel_margin_right="10dp"
                        app:slide_to_cancel_text="Slide To Cancel"/>

                    <in.ateesinfomedia.relief.recorder.RecordButton
                        android:id="@+id/recordBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerInside"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_mic_black_24dp"
