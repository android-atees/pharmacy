<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.OrderViewDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            app:title=""
            app:titleTextColor="@android:color/white">

        </androidx.appcompat.widget.Toolbar>

        <include
            layout="@layout/toolbar_relief_img"
            android:visibility="visible"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_detail_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="#QWE!@#$1234" />

                    <TextView
                        android:id="@+id/order_detail_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="Nov 12, 2020, 10:00 AM" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_16"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="Shipping Details" />

                    <TextView
                        android:id="@+id/order_detail_ship_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="ATEES Information Technologies" />

                    <TextView
                        android:id="@+id/order_detail_ship_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="Thrissur, Kerala" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_16"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="Payment Details" />

                    <TextView
                        android:id="@+id/order_detail_pay_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="COD" />

                </LinearLayout>

                <TextView
                    android:id="@+id/order_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:background="@drawable/button_cart_proceed"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingEnd="@dimen/margin_8"
                    android:paddingTop="@dimen/margin_2"
                    android:paddingBottom="@dimen/margin_2"
                    tools:text="Pending" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_8"
                android:background="@android:color/darker_gray"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_detail_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:background="@android:color/darker_gray"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Subtotal"
                        android:layout_gravity="start|center"/>

                    <TextView
                        android:id="@+id/order_detail_sub_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end|center"
                        android:text="₹ 0"
                        tools:text="Rs 987654" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Discount"
                        android:layout_gravity="start|center"/>

                    <TextView
                        android:id="@+id/order_detail_discount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end|center"
                        android:text="₹ 0"
                        tools:text="Rs 987654" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Shipping &amp; Handling"
                        android:layout_gravity="start|center"/>

                    <TextView
                        android:id="@+id/order_detail_shipping_charge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end|center"
                        android:text="₹ 0"
                        tools:text="Rs 987654" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Tax"
                        android:layout_gravity="start|center"/>

                    <TextView
                        android:id="@+id/order_detail_tax"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end|center"
                        android:text="₹ 0"
                        tools:text="Rs 987654" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textColor="@color/order_price"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Grand Total"
                        android:layout_gravity="start|center"/>

                    <TextView
                        android:id="@+id/order_detail_grand_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textColor="@color/order_price"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end|center"
                        android:text="₹ 0"
                        tools:text="Rs 987654" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

